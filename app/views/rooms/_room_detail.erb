<div
  class="bg-slate-200 w-full h-full mx-auto rounded-3xl shadow-xl"
>
  <%= turbo_stream_from @room %>

  <div class="pt-3 w-11/12 h-full mx-auto">
    <h1 class="text-center text-lg font-bold uppercase">
      <%= @room.name %>
    </h1>    
    
    <div
      id=<%= "room_#{@room.id}_messages" %>
      class="w-full h-[70%] overflow-y-scroll mb-3 bg-white rounded-xl"
    >
      <%= render partial: "messages/message", collection: @room.messages %>
    </div>
    <%= turbo_frame_tag "messages_form", src: new_room_message_path(@room) %>
  </div>
</div>